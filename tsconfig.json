{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "inlineSources": true,
    "types": [
      "node",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": ["./types"],
  },
  
  "include": [
    "lib/**/*",
    "types/**/*"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./app/",
    "dist"
  ],
}